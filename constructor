# self,constructor and comparing objects
class computer:
    def __init__(self):
        self.name="prashu"
        self.age=26
    def update(self):
        self.age=25
    def compare(self,other):
        if self.age==other.age:
            return True
        else:
            return False
c1=computer()
c2=computer()

c1.name="aru"
c1.age=24
print(c1.name,c1.age)
print(c2.name,c2.age)
if c1.compare(c2):
    print('They are of same age')
else:
    print('They are of different age')
c1.update()

